<%= form_for @project, html: { multipart: true } do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
      <%= f.label :image %><br>
      <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :Sdescription %><br>
    <%= f.text_field :Sdescription, class: "form-control" %>
  </div>
  <div class="form-group">
      <%= f.label :Ldescription %><br>
      <%= f.text_area :Ldescription, class: "form-control", rows: "5" %>
  </div>
  <div class="form-group">
    <%= f.label :btnName %><br>
    <%= f.text_field :btnName, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :btnUrl %><br>
    <%= f.url_field :btnUrl, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
